@model List<AppUser>

@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-sm table-hover">
    <tr>
        <td>Ad</td>
        <td>Roller</td>  
        <td>İşlem</td>
    </tr>
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <RolShow user-id="@item.Id"></RolShow>
                </td>  
                <td>
                    <a asp-action="AssignRole" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Rol Ata</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td>Sisteminizde kayıtlı rol bulunmuyor</td>
        </tr>
    }

</table>

